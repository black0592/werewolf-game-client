<template name="item">
  <!--样式在app.wxss-->
  <view class="game-item">
    <view class="game-img-wrapper">
      <image src="https://images-fe.ssl-images-amazon.com/images/I/51OWg-zsNHL._AC_US160_.jpg" class="game-img"></image>
    </view>
    <view class="game-text-wrapper">
      <view class="game-text-left">
        <text class="game-name">活动名称</text>
        <text class="game-time">活动时间</text>
        <view class="game-players">
          <text class="game-players-label">活动人数: </text>
          <view class="game-playlers-number">
            <text class="game-players-in-green">10</text>
            <text>/12</text>
          </view>
        </view>
      </view>
      <view class="game-text-right">
        <text class="game-price">费用</text>
        <text class="game-publish-time">发布时间</text>
      </view>
    </view>
  </view>
</template>